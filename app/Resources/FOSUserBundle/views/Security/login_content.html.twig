{% trans_default_domain 'FOSUserBundle' %}


{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <div id="login-page">
        <div class="text-center container login-screen animated zoomIn">
            <div class="col-sm-12 col-md-10 col-md-offset-1">
                <img class="form-logo" src="{{ asset('logo.png') }}">
                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}
                    <div class="form-group text-center" >
                        {#<label  for="username">{{ 'security.login.username'|trans }}:</label>#}
                        <input type="text" class="form-control text-center" placeholder="Username or Email" id="username" name="_username" value="{{ last_username }}" required="required">
                    </div>
                    <div class="form-group text-center" >
                        {#<label for="password">{{ 'security.login.password'|trans }}:</label>#}
                        <input type="password" class="form-control text-center" placeholder="Password" id="password" name="_password" required="required">
                    </div>
                    <div class="checkbox" >
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                        <label class="text-white" for="remember_me"> {{ 'security.login.remember_me'|trans }}</label>
                    </div>
                    <div class="text-center">
                        <input type="submit" id="submit" name="_submit" class="btn btn-primary btn-mid" value="{{ 'security.login.submit'|trans }}"></input>
                </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}