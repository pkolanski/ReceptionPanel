{% trans_default_domain 'FOSUserBundle' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/styles.css') }}">
{% endblock %}

{% block body %}
    <div class="white-box login-screen text-center">
    <p style="font-size: 1.5vw">    <span class="fa-passwd-reset fa-stack">
        <i class="fa fa-undo fa-stack-2x"></i>
        <i class="fa fa-lock fa-stack-1x"></i></span> Change password
    </p>
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}

    {{ form_widget(form.current_password, { 'attr': {'class': 'form-control form-input', 'placeholder': 'form.current_password'} }) }}
    {{ form_errors(form.current_password) }}

    {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control form-input', 'placeholder': 'form.password'} }) }}
    {{ form_errors(form.plainPassword.first) }}

    {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control form-input', 'placeholder': 'form.password_confirmation'} }) }}
    {{ form_errors(form.plainPassword.second) }}

    <div>
        <input class="btn btn-success btn-block" type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
    {{ form_end(form) }}
    <div>
{% endblock %}